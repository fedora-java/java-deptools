# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /about                      controllers.Application.about
GET     /                           controllers.Application.index(page: Int = 1, q: String ?= "", collection: Option[String] ?= None)
GET     /:page                      controllers.Application.index(page: Int, q: String ?= "", collection: Option[String] ?= None)
GET     /package/:name              controllers.Application.packageDetail(collection: String, name: String)
GET     /package/:pkgName/:fileId   controllers.Application.fileArtifactDetail(pkgName: String, fileId: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)